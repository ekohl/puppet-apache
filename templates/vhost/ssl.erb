# file managed by puppet
<VirtualHost<% sslports.each do |port| -%> <%= port %><% end -%>>
  ServerName <%= name %>

<% aliases.each do |serveralias| -%>
  ServerAlias <%= serveralias %>
<% end -%>

  DocumentRoot <%= documentroot %>

  LogLevel warn

  ErrorLog <%= scope.lookupvar('apache::params::rootdir') %>/<%= name %>/logs/error.log
  CustomLog <%= scope.lookupvar('apache::params::rootdir') %>/<%= name %>/logs/access.log combined

  Include <%= scope.lookupvar('apache::params::rootdir') %>/<%= name%>/conf/*.conf

  SSLEngine On
  SSLCertificateFile <%= certfile %>
  SSLCertificateKeyFile <%= certkeyfile %>
  SSLCACertificateFile <%= cacertfile %>
<% if has_variable?("certchainfile") -%>
  SSLCertificateChainFile <%= certchainfile %>
<% end -%>

<% if cgipath -%>
  ScriptAlias /cgi-bin/ <%= cgipath %>
  <Directory <%= cgipath %>>
    Options +ExecCGI
    AddHandler cgi-script .cgi
  </Directory>
<% end -%>

  ServerSignature Off

</VirtualHost>
