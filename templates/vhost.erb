# file managed by puppet
<VirtualHost<% ports.each do |port| -%> <%= port %><% end -%>>
  ServerName <%= name %>

<% aliases.each do |serveralias| -%>
  ServerAlias <%= serveralias %>
<% end -%>

  DocumentRoot <%= documentroot %>

	<Directory <%= scope.lookupvar('apache::params::rootdir') %>/<%= name %>/htdocs>
		Options -Indexes FollowSymLinks
		AllowOverride All
		Order allow,deny
		Allow from all
	</Directory>
		
  LogLevel warn

  ErrorLog <%= scope.lookupvar('apache::params::rootdir') %>/<%= name %>/logs/error.log
  CustomLog <%= scope.lookupvar('apache::params::rootdir') %>/<%= name %>/logs/access.log "<%= accesslog_format %>"

  Include <%= scope.lookupvar('apache::params::rootdir') %>/<%= name%>/conf/*.conf

<% if cgipath -%>
  ScriptAlias /cgi-bin/ <%= cgipath %>
  <Directory <%= cgipath %>>
    Options +ExecCGI
    AddHandler cgi-script .cgi
  </Directory>
<% end -%>

  ServerSignature Off

</VirtualHost>
